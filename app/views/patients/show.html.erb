

<meta name="viewport" content="width=device-width, initial-scale=1.0">


<div id="profile_form">
<div class="profileContainer">
<div id="provider_profile_picture">
    <% if @patient.present? %>
      <%if @patient.image.first == nil %>
        <%= image_tag image_url("https://cdn.iconscout.com/public/images/icon/free/png-512/avatar-user-old-lady-3295dab3713f6121-512x512.png"), :size => "150x150" %>
      <%else%>
        <%= image_tag @patient.image.first, :size => "470x545"%>
      <%end%>
    <% else %>
    <%= image_tag image_url("https://cdn.iconscout.com/public/images/icon/free/png-512/avatar-user-old-lady-3295dab3713f6121-512x512.png"), :size => "150x150" %>
    <% end %>
    
  </div>
  </div>
  <div class="btn-group">
  
    <%= form_tag patient_path, method: :get, remote: true do %>
    <%= button_tag 'Profile', :class => "buttonProvider", :id => 'ProfileButton'%>
    <%end%>
    
</div><br>
<div class="btn-group"> <%= form_tag patient_path, method: :get, remote: true do %>
    <%= button_tag 'Appointment', :class => "buttonProvider", :id => "AppointmentButton" %>
    <%end%></div><br>
 

<div id ="appointmentShow"></div>
<div id="profileOfTheProvider">
<%= render 'patient' %>
</div>
</div>
<script>
var modal = document.getElementById('myModal');


var img = document.getElementById('provider_profile_picture');
var modalImg = document.getElementById("provider_profile_picture");
var captionText = document.getElementById("caption");
img.onclick = function(){
    modal.style.display = "block";
    modalImg.src = this.src;
    captionText.innerHTML = this.alt;
}

// Get the <span> element that closes the modal
var span = document.getElementsByClassName("close")[0];

// When the user clicks on <span> (x), close the modal
span.onclick = function() { 
    modal.style.display = "none";
}
</script>
